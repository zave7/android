<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/bt_ex42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="실습 42"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt_ex43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="실습 43"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt_ex51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="실습 51"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt_ex4_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="실습 4_24"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt_newActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="새화면띄우기(닫기)"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt_inflation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="Inflation"
                android:textSize="20sp" />


            <Button
                android:id="@+id/bt_ex_10_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="영화별점주기"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt_ex_10_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="암시적 인텐트"
                android:textSize="20sp" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="로그인"
                android:textSize="20sp" />

            <Button
                android:id="@+id/otherapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="다른앱의 화면 띄우기"
                android:textSize="20sp" />

            <Button
                android:id="@+id/customListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="CustomListView"
                android:textSize="20sp" />

            <Button
                android:id="@+id/lifecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="Life Cycle"
                android:textSize="20sp" />

            <Button
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="프로그레스바"
                android:textSize="20sp" />

            <Button
                android:id="@+id/rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="환율"
                android:textSize="20sp" />

            <Button
                android:id="@+id/viewcart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="장바구니보기"
                android:textSize="20sp" />

            <Button
                android:id="@+id/tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="탭호스트"
                android:textSize="20sp" />

            <Button
                android:id="@+id/diary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="간단 일기장"
                android:textSize="20sp" />

            <Button
                android:id="@+id/sqlite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btClick"
                android:text="SQLite"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>